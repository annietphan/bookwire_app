
<%= form_for @club do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br />

  <%= f.label :genre %>
  <%= f.text_field :genre %><br />

  <%= f.label :description %>
  <%= f.text_area :description %><br />
  <p>Add Book to Start</p>
  <%= f.fields_for :book do |b| %>
  <%= b.text_field :title, placeholder: "Title" %><br />
  <%= b.text_field :author, placeholder: "Author" %><br />
  <%= b.text_area :summary, placeholder: "Summary" %><br />

  <% end %>

  <%= f.submit %>
<% end %>
