
<% if @review.errors %>
  <ul>
    <%  @review.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <%end%>
  </ul>
<%end%>

<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
