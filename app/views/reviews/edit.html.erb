<h1>Edit Review</h1>
<% if @review.errors %>
  <%  @review.errors.full_messages.each do |error| %>
    <%= error %>
  <%end%>
<%end%>
<%= simple_form_for([@book, @review]) do |f| %>
  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>


<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
