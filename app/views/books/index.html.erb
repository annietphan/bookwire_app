<h1 class="current-genre"><%= params[:genre] %></h1>

<% if @books.count == 0 %>
  <h1>There are no books in this genre.</h1>
<% else %>
  <div class="row">

    <% @books.each do |book| %>

      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_image.url(:book_index), class: "book" %>
        </a>
      </div>

    <% end %>

  </div>
<% end %>
