<h1><%= current_user.name %>'s Books</h1>

<ul>
  <div class="row">

    <% @books.each do |book| %>

      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_image.url(:book_index), class: "book" %>
        </a>
      </div>

    <% end %>

  </div>
</ul>
